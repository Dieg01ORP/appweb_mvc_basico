@model IEnumerable<AppWeb1.Models.TaskItem>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Mis Tareas</h2>
<a class="btn btn-success mb-3" href="/Tasks/Create">Nueva</a>
<table class="table table-striped">
    <tr><th>Título</th><th>Estado</th><th></th></tr>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.Titulo</td>
            <td>@(t.Completado ? "✔" : "Pendiente")</td>
            <td>
                <a class="btn btn-sm btn-warning" href="/Tasks/Edit/@t.Id">Editar</a>
                <a class="btn btn-sm btn-danger" href="/Tasks/Delete/@t.Id">Eliminar</a>
            </td>
        </tr>
    }
</table>